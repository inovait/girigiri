{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",           
    "moduleResolution": "nodenext",  
    "outDir": "dist",                
    "rootDir": "src",                
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true              
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
